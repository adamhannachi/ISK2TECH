{% extends 'base.html.twig' %}

{% block title %}page-crudUser{% endblock %}

{% block body %}
  <h3 class="text-center">liste des Utlistauer</h3>
<table class="table text-center  container rounded ">
  <thead >
  
    <tr>
    <th scope="col">#Id</th>
      <th scope="col">Prénom</th>
      <th scope="col">Nom</th>
      <th scope="col">Email</th>
     <th scope="col">adresse Postale</th>
     <th scope="col">Number Phone</th>
    
     <th scope="col">Option</th>
    </tr>
  </thead>
  {% for Users in User %}
  <tbody>
    <tr>
     <td>{{Users.id}}</td>
      <td>{{Users.firstName}}</td>
      <td>{{Users.lastName}}</td>
      <td>{{Users.email}}</td>
      <td>{{Users.adressePostale}}</td>
      <td>{{Users.NumberPhone}}</td>
      
      <td cla="d-flex container">
      <a class="bg-success text-dark p-1 rounded bg-opacity-75 me-1" href="{{path('modifier_user',{id: Users.id})}}">modifier <i class="fa-regular fa-pen-to-square text-light ms-1"></i></a>
      <a class="bg-danger text-dark p-1 rounded bg-opacity-75 " href="{{path('delete_user',{id: Users.id})}}">supprimer <i class="fa-solid fa-trash-can text-light ms-1"></i></a>
      <a class="bg-dark text-light p-1 rounded bg-opacity-75 " href="{{path("creer_user")}}">créer<i class="fa-solid fa-trash-can text-light ms-1"></i></a>
      </td>
    </tr>
   
  </tbody>
  {% endfor %}
</table>

     {# display navigation #}
<div class="navigation d-flex justify-content-center mt-3">
    {{knp_pagination_render(User)}}
</div>
{% endblock %}
